{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build all C and A files",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.c",
				"${workspaceFolder}/src/**/*.c",
                "${workspaceFolder}/lib/libft/src/*.c",
                "${workspaceFolder}/lib/libft/src/**/*.c",
                "${workspaceFolder}/lib/libft/src/**/**/*.c",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/lib/libft/include",
				"-I${workspaceFolder}/lib/libft/include/ft_get_next_line",
				"-I${workspaceFolder}/lib/libft/include/ft_printf",
				"-lm",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
